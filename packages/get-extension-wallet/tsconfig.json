  "exclude": ["**/node_modules/**/*", "**/dist/**/*"],

  "compilerOptions": {
    "outDir": "./dist/",
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@alephium/web3": ["../../node_modules/@alephium/web3"]
    }
  }
}
